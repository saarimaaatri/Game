	}
	
	private class Bubble extends Actor {
		private int radius;

		public Bubble(int x, int y, int dx, int dy, int radius, Color c,
			int transparency) {
			CircleShape circle = new CircleShape(radius);
			circle.setFillColor(new Color(c, transparency));
			circle.setOrigin(radius, radius);
			
			this.x = x;
			this.y = y;
			this.dx = dx;
			this.dy = dy;
			this.radius = radius;

			obj = circle;
		}

		//
		// Default method typically assumes a rectangle,
		// so do something a little different
		//
		@Override
		public boolean within (int px, int py) {
			//
			// In this example, For simplicty...
			// - We just treat circle as a box
			// - x, y is the top corner rather than the centre
			// - We use points x,y and px, py not bounding boxes
			//
			if (px > x && px < x + 2 * radius &&
					py > y && py < y + 2 * radius) {
				return true;
			}
			else {
				return false;
			}
		}
	}
	
	public class GameOver{
		public void run(){
			RenderWindow window = new RenderWindow( );
			window.create(new VideoMode(screenWidth, screenHeight),
				Title,
				WindowStyle.DEFAULT);

			window.setFramerateLimit(30);
			
			//Image logo = new Image(512,150,0,0,0, "H:/My Documents/210/Test/Logo.jpg");
			
			Image startButton = new Image(512, 388,0,0,0,0, "C:/Users/Matthew/Downloads/Test/StartButton.png");
			
			actors.add(new Image(512, 384,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Background.jpg"));
			actors.add(startButton);
			//actors.add(logo);
		
			while (window.isOpen( )) {
				window.clear(Color.WHITE);

				for (Actor actor : actors) {
					actor.calcMove(0, 0, screenWidth, screenHeight);
					actor.performMove( );
					actor.draw(window);
				}
				window.display( );

				
				for (Event event : window.pollEvents( )) {
					if (event.type == Event.Type.CLOSED) {
						// the user pressed the close button
						window.close( );
					}
					if (event.type == Event.Type.MOUSE_BUTTON_PRESSED){
						Vector2i pos = Mouse.getPosition();
//						System.out.println("The user pressed the following key: " + pos.y);
						if (pos.x > 750 && pos.x < 1200 && pos.y > 520 && pos.y < 630) {
							window.close();
						}
					}
				}
			}
		}
	}

	
	public class Game{
		public void run(){
			RenderWindow window = new RenderWindow( );
			window.create(new VideoMode(screenWidth, screenHeight),
				Title,
				WindowStyle.DEFAULT);

			window.setFramerateLimit(30);
			
			Image[ ] things = new Image[10];
			
			Image sprite = new Image(512, 675,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Sprite.png");
			Image BackG = new Image(512, 384,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Background.jpg");
			Image borderL = new Image(128, 384,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Border.jpg");
			Image borderR = new Image(896, 384,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Border.jpg");
			things[0] = new Image(477, 25,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockLnR.jpg");
			things[1] = new Image(547, 125,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockLnR.jpg");
			things[2] = new Image(477, 225,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockLnR.jpg");
			things[3] = new Image(367, 625,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockMid.jpg");
			things[4] = new Image(658, 625,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockMid.jpg");
			things[5] = new Image(291, 325,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockSmall.jpg");
			things[6] = new Image(597, 325,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockLarge.jpg");
			things[7] = new Image(547, 525,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockLnR.jpg");	
			things[8] = new Image(712, 425,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockSmall.jpg");
			things[9] = new Image(411, 425,0,70,0,1, "C:/Users/Matthew/Downloads/Test/BlockLarge.jpg");
			
			GameOver game = new GameOver();
		
			while (window.isOpen( )) {
				// Clear the screen
				window.clear();
				actors.add(BackG);
				actors.add(sprite);
				actors.add(borderL);
				actors.add(borderR);
				
				for(int i = 0; i < 10; i++){
					actors.add(things[i]);
				}			
				

				// Handle any event
				while(true){
					
					for(int i = 0; i < 10; i++){
						if(things[i].y > 762){
							actors.remove(things[i]);
							things[i].changeY(0);
							actors.add(things[i]);
						}
					}				
					
					for (Actor actor : actors) {
						actor.calcMove(0, 0, screenWidth, screenHeight);
						actor.performMove( );
						actor.draw(window);
					}
					
				

					// Update the display with any changes
					window.display( );
					//keyboard working code
					for (Event event : window.pollEvents( )) {
						if (event.type == Event.Type.CLOSED) {
							// the user pressed the close button
							window.close( );
						}
						if (event.type == Event.Type.KEY_PRESSED){
							for(int i = 0; i < 10; i++){
								if(things[i].y > 762){
									actors.remove(things[i]);
									things[i].changeY(0);
									actors.add(things[i]);
								}
								if((sprite.y > (things[i].y - 30) && sprite.y < (things[i].y + 30)) && ((sprite.x > (things[i].x - things[i].size)) && (sprite.x < (things[i].x + things[i].size)))){
									sprite.changeY(0);
								}								
							}
							

							KeyEvent keyboard = event.asKeyEvent();
//							System.out.println(keyboard.key);
							if((keyboard.key.equals(Keyboard.Key.valueOf("A")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("W")) == true)){
								sprite.changeDx(-6);
								sprite.changeDy(-6);
							}else if((keyboard.key.equals(Keyboard.Key.valueOf("D")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("W")) == true)){
								sprite.changeDy(-6);
								sprite.changeDx(6);
							}else if((keyboard.key.equals(Keyboard.Key.valueOf("S")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("D")) == true)){
								sprite.changeDy(6);
								sprite.changeDx(6);
							}else if((keyboard.key.equals(Keyboard.Key.valueOf("S")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("A")) == true)){
								sprite.changeDy(6);
								sprite.changeDx(-6);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("W")) == true){
								sprite.changeDy(-6);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("A")) == true){
								sprite.changeDx(-6);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("D")) == true){
								sprite.changeDx(6);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("S")) == true){
								sprite.changeDy(6);
							}
//						System.out.println("The user pressed the following key: " + things[7].y);
						}
						
						if (event.type == Event.Type.KEY_RELEASED){
							sprite.changeDx(0);
							sprite.changeDy(0);
						}
						
						
						for (Actor actor : actors) {
							actor.calcMove(0, 0, screenWidth, screenHeight);
							actor.performMove( );
							actor.draw(window);
						}
						
						if(sprite.x < 260){
							sprite.reboundX(10);
						}else if(sprite.x > 765){
							sprite.reboundX(-10);
						}
						
						if(sprite.y < 0){
							sprite.reboundY(10);
						}else if(sprite.y > 763){
							window.close();
							game.run();
						}//else if(!(sprite.y > 700)){
//							for(int Score = 0;;Score++) {
//							System.out.println("Score: " + Score); 
//							}
//						}
							
						
						window.display( );
					}

					
					//code for mouse
					/*Vector2i pos = Mouse.getPosition();		
					sprite.calMove(pos.x,pos.y);*/
				}
				
			}
		}
		
		
		
	}

	public class StartMenu{
		public StartMenu(){
			
		}
		
		Game gameBoard = new Game();
		
		public void run(){
			RenderWindow window = new RenderWindow( );
			window.create(new VideoMode(screenWidth, screenHeight),
				Title,
				WindowStyle.DEFAULT);

			window.setFramerateLimit(30);
			
			Image logo = new Image(512,150,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Logo.png");			
			Image startButton = new Image(512, 388,0,0,0,0, "C:/Users/Matthew/Downloads/Test/StartButton.png");
			Image optionsButton = new Image(512, 518,0,0,0,0, "C:/Users/Matthew/Downloads/Test/OptionsButton.png");
			Image leaderboardButton = new Image(512, 648,0,0,0,0, "C:/Users/Matthew/Downloads/Test/LeaderboardButton.png");
			Image Background = new Image(512, 384,0,0,0,0, "C:/Users/Matthew/Downloads/Test/Background.jpg");
						
		
			while (window.isOpen( )) {
				// Clear the screen
				window.clear(Color.WHITE);
				actors.add(Background);
				actors.add(startButton);
				actors.add(optionsButton);
				actors.add(leaderboardButton);
				actors.add(logo);


				// Move all the actors around
				for (Actor actor : actors) {
					actor.calcMove(0, 0, screenWidth, screenHeight);
					actor.performMove( );
					actor.draw(window);
				}

				// Update the display with any changes
				window.display( );

				// Handle any events
				for (Event event : window.pollEvents( )) {
					if (event.type == Event.Type.CLOSED) {
						// the user pressed the close button
						window.close( );
					}
					if (event.type == Event.Type.MOUSE_BUTTON_PRESSED){
						Vector2i pos = Mouse.getPosition();
//						System.out.println("The user pressed the following key: " + pos.y);
						if (pos.x > 750 && pos.x < 1200 && pos.y > 520 && pos.y < 630) {
							window.close();
							gameBoard.run();
						}
					}
				}
			}
		}
	}
	
	public void run ( ) {
		if ((new File(JreFontPath)).exists( )) FontPath = JreFontPath;
		else FontPath = JdkFontPath;
		
		StartMenu test = new StartMenu();
		test.run();
	}

	public static void main (String args[ ]) {
		Test t = new Test( );
		t.run( );
	}
}
