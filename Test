class Test {
	private static int screenWidth  = 1024;
	private static int screenHeight = 768;

	//
	// The Java install comes with a set of fonts but these will
	// be on different filesystem paths depending on the version
	// of Java and whether the JDK or JRE version is being used.
	//
	private static String JavaVersion = 
		Runtime.class.getPackage( ).getImplementationVersion( );
	private static String JdkFontPath =
		"C:\\Program Files\\Java\\jdk" + JavaVersion +
		"\\jre\\lib\\fonts\\";
	private static String JreFontPath =
		"C:\\Program Files\\Java\\jre" + JavaVersion +
		"\\lib\\fonts\\";

	private static int fontSize     = 48;
	private static String FontFile  = "LucidaSansRegular.ttf";
	private static String ImageFile = "team.jpg";

	private static String Title   = "Hello SCC210!";
	private static String Message = "Round and round...";

	private String FontPath;	// Where fonts were found

	private ArrayList<Actor> actors = new ArrayList<Actor>( );

	private abstract class Actor {
		Transformable obj;   // Base object

		int x  = 0;	// Current X-coordinate
		int y  = 0;	// Current Y-coordinate

		int r  = 0;	// Change in rotation per cycle
		int dx = 5;	// Change in X-coordinate per cycle
		int dy = 5;	// Change in Y-coordinate per cycle

		//
		// Is point x, y within area occupied by this object?
		//
		// This should really be done with bounding boxes not points
		// ...we should check whether any point in bounding box
		//    is covered by this object
		//
		boolean within (int x, int y) {
			// Should check object bounds here
			// -- we'd normally assume a simple rectangle
			//    ...and override as necessary
			return false;
		}

		//
		// Work out where object should be for next frame
		//
		void calcMove(int minx, int miny, int maxx, int maxy) {
			//
			// Add deltas to x and y position
			//
			x += dx;
			y += dy;

			//
			// Check we've not hit screen bounds
			// x and y would normally be the object's centre point
			// rather than its top corner so we can more easily
			// rotate objects and handle circular shapes
			//
			if (x <= minx || x >= maxx) { dx *= -1; x += dx; }
			if (y <= miny || y >= maxy) { dy *= -1; y += dy; }

			//
			// Check we've not collided with any other actor
			//
			for (Actor a : actors) {
				if (a.obj != obj && a.within(x, y)) {
					dx *= -1; x += dx;
					dy *= -1; y += dy;
				}
			}
		}

		//
		// Rotate and reposition the object
		//
		void performMove( ) {
			obj.rotate(r);
			obj.setPosition(x,y);
		}

		//
		// Render the object at its new position
		//
		void draw(RenderWindow w) {
			w.draw((Drawable)obj);
		}
	}

	private class Message extends Actor {
		public Message(int x, int y, int r, int dx, int dy, String message, Color c) {
			//
			// Load the font
			//
			Font sansRegular = new Font( );
			try {
				sansRegular.loadFromFile(
						Paths.get(FontPath+FontFile));
			} catch (IOException ex) {
				ex.printStackTrace( );
			}

			Text text = new Text (message, sansRegular, fontSize);
			text.setColor(c);
			text.setStyle(Text.BOLD | Text.UNDERLINED);

			FloatRect textBounds = text.getLocalBounds( );
			// Find middle and set as origin/ reference point
			text.setOrigin(textBounds.width / 2,
					textBounds.height / 2);

			this.x = x;
			this.y = y;
			this.dx = dx;
			this.dy = dy;
			this.r = r;

			obj = text;
		}
	}

	private class Image extends Actor{
		int countX = 0;
		int countY = 0;
		
		int checkY = 1;
		int checkX = 1;
		
		int neX = 0;
		int neY = 0;
		
		public Image(int x, int y, int r,int dx,int dy,String textureFile) {
			//
			// Load image/ texture
			//
			Texture imgTexture = new Texture( );
			try {
				imgTexture.loadFromFile(Paths.get(textureFile));
			} catch (IOException ex) {
				ex.printStackTrace( );
			}
			imgTexture.setSmooth(true);

			Sprite img = new Sprite(imgTexture);
			img.setOrigin(Vector2f.div(
					new Vector2f(imgTexture.getSize()), 2));

			this.x = x;
			this.y = y;
			this.r = r;
			this.dx = dx;
			this.dy = dy;

			obj = img;
		}

		public void changeX(int x){
			if(x > 0 && checkX == -1){
				countX = 0;
			}else if(x < 0 && checkX == 1){
				countX = 0;
			}
			
			if(x > 0){
				checkX = 1;
			}else{
				checkX = -1;
			}
			if(countX < 10){
				countX++;
			}
			this.x = (x * countX) + this.x;			
		}
		
		public void changeY(int y){
			if(y > 0 && checkY == -1){
				countY = 0;
			}else if(y < 0 && checkY == 1){
				countY = 0;
			}
			
			if(y > 0){
				checkY = 1;
			}else{
				checkY = -1;
			}
			if(countY < 10){
				countY++;
			}
			this.y = (y * countY) + this.y;		
		}
		
		public void changeDy(int y){
			this.dy = y;	
		}
		
		public void changeDx(int x){
			this.dx = x;
		}
		
		public void reboundX(int x){
			this.x += x;
		}
		
		public void reboundY(int y){
			this.y += y;
		}

		
		
		//code for mouse
		/*public void calMove(int mouseX,int mouseY){
			neX = mouseX - this.x;
			neY = mouseY - this.y;
			
		
			if(neX > 0){
				this.changeX(1);
			}
			if(neX < 0){
				this.changeX(-1);
			}
			if(neY > 0){
				this.changeY(1);
			}
			if(neY < 0){
				this.changeY(-1);
			}
			
			
		}*/
	}
	
	private class Bubble extends Actor {
		private int radius;

		public Bubble(int x, int y, int dx, int dy, int radius, Color c,
			int transparency) {
			CircleShape circle = new CircleShape(radius);
			circle.setFillColor(new Color(c, transparency));
			circle.setOrigin(radius, radius);
			
			this.x = x;
			this.y = y;
			this.dx = dx;
			this.dy = dy;
			this.radius = radius;

			obj = circle;
		}

		//
		// Default method typically assumes a rectangle,
		// so do something a little different
		//
		@Override
		public boolean within (int px, int py) {
			//
			// In this example, For simplicty...
			// - We just treat circle as a box
			// - x, y is the top corner rather than the centre
			// - We use points x,y and px, py not bounding boxes
			//
			if (px > x && px < x + 2 * radius &&
					py > y && py < y + 2 * radius) {
				return true;
			}
			else {
				return false;
			}
		}
	}
	
	public class GameOver{
		public void run(){
			RenderWindow window = new RenderWindow( );
			window.create(new VideoMode(screenWidth, screenHeight),
				Title,
				WindowStyle.DEFAULT);

			window.setFramerateLimit(30);
			
			//Image logo = new Image(512,150,0,0,0, "H:/My Documents/210/Test/Logo.jpg");
			
			Image startButton = new Image(512, 388,0,0,0, "H:/My Documents/210/Test/StartButton.jpg");
			
			actors.add(new Image(512, 384,0,0,0, "H:/My Documents/210/Test/Background.jpg"));
			actors.add(startButton);
			//actors.add(logo);
		
			while (window.isOpen( )) {
				window.clear(Color.WHITE);

				for (Actor actor : actors) {
					actor.calcMove(0, 0, screenWidth, screenHeight);
					actor.performMove( );
					actor.draw(window);
				}
				window.display( );

				
				for (Event event : window.pollEvents( )) {
					if (event.type == Event.Type.CLOSED) {
						// the user pressed the close button
						window.close( );
					}
					if (event.type == Event.Type.MOUSE_BUTTON_PRESSED){
						Vector2i pos = Mouse.getPosition();
//						System.out.println("The user pressed the following key: " + pos.y);
						if (pos.x > 750 && pos.x < 1200 && pos.y > 520 && pos.y < 630) {
							window.close();
						}
					}
				}
			}
		}
	}

	
	public class Game{
		public void run(){
			RenderWindow window = new RenderWindow( );
			window.create(new VideoMode(screenWidth, screenHeight),
				Title,
				WindowStyle.DEFAULT);

			window.setFramerateLimit(30);;
			
			Image sprite = new Image(545, 384,0,0,0, "C:/Users/Matthew/Downloads/Test/Sprite.jpg");
			Image BackG = new Image(512, 384,0,0,0, "C:/Users/Matthew/Downloads/Test/Background.jpg");
			Image borderL = new Image(128, 384,0,0,0, "C:/Users/Matthew/Downloads/Test/Border.jpg");
			Image borderR = new Image(896, 384,0,0,0, "C:/Users/Matthew/Downloads/Test/Border.jpg");
			Image blockL = new Image(477, 75,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockLnR.jpg");
			Image blockR = new Image(547, 175,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockLnR.jpg");
			Image blockMid11 = new Image(367, 275,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockMid.jpg");
			Image blockMid12 = new Image(658, 275,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockMid.jpg");
			Image blockMidL1S = new Image(291, 375,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockSmall.jpg");
			Image blockMidL1L = new Image(597, 375,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockLArge.jpg");
			Image blockMidR1S = new Image(712, 475,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockSmall.jpg");
			Image blockMidR1L = new Image(411, 475,0,0,0, "C:/Users/Matthew/Downloads/Test/BlockLArge.jpg");
			
			GameOver game = new GameOver();
		
			while (window.isOpen( )) {
				// Clear the screen
				window.clear();
				actors.add(BackG);
				actors.add(sprite);
				actors.add(borderL);
				actors.add(borderR);
				actors.add(blockL);
				actors.add(blockR);
				actors.add(blockMid11);
				actors.add(blockMid12);
				actors.add(blockMidL1S);
				actors.add(blockMidL1L);
				actors.add(blockMidR1S);
				actors.add(blockMidR1L);

				// Move all the actors around
				for (Actor actor : actors) {
					actor.calcMove(0, 0, screenWidth, screenHeight);
					actor.performMove( );
					actor.draw(window);
				}

				// Update the display with any changes
				window.display( );
				
				// Handle any event
				while(true){
					//keyboard working code
					for (Event event : window.pollEvents( )) {
						if (event.type == Event.Type.CLOSED) {
							// the user pressed the close button
							window.close( );
						}
						if (event.type == Event.Type.KEY_PRESSED){
							KeyEvent keyboard = event.asKeyEvent();
							System.out.println(keyboard.key);
							if((keyboard.key.equals(Keyboard.Key.valueOf("A")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("W")) == true)){
								sprite.changeDx(-5);
								sprite.changeDy(-5);
							}else if((keyboard.key.equals(Keyboard.Key.valueOf("D")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("W")) == true)){
								sprite.changeDy(-5);
								sprite.changeDx(5);
							}else if((keyboard.key.equals(Keyboard.Key.valueOf("S")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("D")) == true)){
								sprite.changeDy(5);
								sprite.changeDx(5);
							}else if((keyboard.key.equals(Keyboard.Key.valueOf("S")) == true) && (keyboard.key.equals(Keyboard.Key.valueOf("A")) == true)){
								sprite.changeDy(5);
								sprite.changeDx(-5);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("W")) == true){
								sprite.changeDy(-5);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("A")) == true){
								sprite.changeDx(-5);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("D")) == true){
								sprite.changeDx(5);
							}else if(keyboard.key.equals(Keyboard.Key.valueOf("S")) == true){
								sprite.changeDy(5);
							}
	//						System.out.println("The user pressed the following key: " + pos.x);
						}
						
						if (event.type == Event.Type.KEY_RELEASED){
							sprite.changeDx(0);
							sprite.changeDy(0);
						}
						
						
						for (Actor actor : actors) {
							actor.calcMove(0, 0, screenWidth, screenHeight);
							actor.performMove( );
							actor.draw(window);
						}
						
						if(sprite.x < 260){
							sprite.reboundX(10);
						}else if(sprite.x > 765){
							sprite.reboundX(-10);
						}
						
						if(sprite.y < 0){
							sprite.reboundY(10);
						}else if(sprite.y > 765){
							window.close();
							game.run();
						}
							
						
						window.display( );
					}
					
					//code for mouse
					/*Vector2i pos = Mouse.getPosition();		
					sprite.calMove(pos.x,pos.y);*/
				}
				
			}
		}
		
		
		
	}

	public class StartMenu{
		public StartMenu(){
			
		}
		
		Game gameBoard = new Game();
		
		public void run(){
			RenderWindow window = new RenderWindow( );
			window.create(new VideoMode(screenWidth, screenHeight),
				Title,
				WindowStyle.DEFAULT);

			window.setFramerateLimit(30);
			
			Image logo = new Image(512,150,0,0,0, "C:/Users/Matthew/Downloads/Test/Logo.png");			
			Image startButton = new Image(512, 388,0,0,0, "C:/Users/Matthew/Downloads/Test/StartButton.png");
			Image optionsButton = new Image(512, 518,0,0,0, "C:/Users/Matthew/Downloads/Test/OptionsButton.png");
			Image leaderboardButton = new Image(512, 648,0,0,0, "C:/Users/Matthew/Downloads/Test/LeaderboardButton.png");
			Image Background = new Image(512, 384,0,0,0, "C:/Users/Matthew/Downloads/Test/Background.jpg");
						
		
			while (window.isOpen( )) {
				// Clear the screen
				window.clear(Color.WHITE);
				actors.add(Background);
				actors.add(startButton);
				actors.add(optionsButton);
				actors.add(leaderboardButton);
				actors.add(logo);


				// Move all the actors around
				for (Actor actor : actors) {
					actor.calcMove(0, 0, screenWidth, screenHeight);
					actor.performMove( );
					actor.draw(window);
				}

				// Update the display with any changes
				window.display( );

				// Handle any events
				for (Event event : window.pollEvents( )) {
					if (event.type == Event.Type.CLOSED) {
						// the user pressed the close button
						window.close( );
					}
					if (event.type == Event.Type.MOUSE_BUTTON_PRESSED){
						Vector2i pos = Mouse.getPosition();
//						System.out.println("The user pressed the following key: " + pos.y);
						if (pos.x > 750 && pos.x < 1200 && pos.y > 520 && pos.y < 630) {
							window.close();
							gameBoard.run();
						}
					}
				}
			}
		}
	}
	
	public void run ( ) {
		if ((new File(JreFontPath)).exists( )) FontPath = JreFontPath;
		else FontPath = JdkFontPath;
		
		StartMenu test = new StartMenu();
		test.run();
	}

	public static void main (String args[ ]) {
		Test t = new Test( );
		t.run( );
	}
